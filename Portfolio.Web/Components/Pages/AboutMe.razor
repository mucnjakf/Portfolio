@page "/"

<PageTitle>About me - Portfolio</PageTitle>

<Card Margin="mb-4" Padding="py-3">
    <Content>
        <div class="row">
            <div class="col-2 ms-5 mx-4">
                <img src="@_dto.ProfileImage" alt="Profile image" class="img-fluid rounded-circle"
                     style="box-shadow: .1rem .1rem 1rem rgba(0, 0, 0, .3)"/>
            </div>

            <div class="col-9 align-content-center">
                <h6 class="text-muted">Hi, my name is</h6>
                <h1>@_dto.Name</h1>
                <h2 class="text-muted">
                    @_dto.Description
                </h2>
            </div>
        </div>
    </Content>
</Card>

<div class="row">
    <div class="col">
        <Card Title="Personal information" Padding="p-3" Height="h-100">
            <Content>
                <div class="row mb-2">
                    <div class="col">
                        <span class="text-muted small me-2">
                            <i class="bi bi-hammer me-1"></i>
                            Professional
                        </span>

                        <span class="fs-5">
                            @_dto.Professional
                        </span>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col">
                        <span class="text-muted small me-2">
                            <i class="bi bi-book me-1"></i>
                            Education
                        </span>

                        <span class="fs-5">
                            @_dto.Education
                        </span>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col">
                        <span class="text-muted small me-2">
                            <i class="bi bi-gender-ambiguous me-1"></i>
                            Gender
                        </span>

                        <span class="fs-5">
                            @_dto.Gender
                        </span>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col">
                        <span class="text-muted small me-2">
                            <i class="bi bi-cake2 me-1"></i>
                            Date of birth
                        </span>
                        <span class="fs-5">
                            @_dto.DateOfBirth
                        </span>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col">
                        <span class="text-muted small me-2">
                            <i class="bi bi-geo me-1"></i>
                            Location
                        </span>
                        <span class="fs-5">
                            @_dto.Location
                        </span>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col">
                        <span class="text-muted small me-2">
                            <i class="bi bi-envelope me-1"></i>
                            E-Mail
                        </span>
                        <span class="fs-5">
                            <a href="mailto:@_dto.Email" class="text-decoration-none text-reset">
                                @_dto.Email
                            </a>
                        </span>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <span class="text-muted small me-2">
                            <i class="bi bi-github me-1"></i>
                            GitHub
                        </span>
                        <span class="fs-5">
                            <a href="https://www.github.com/@_dto.GitHub" target="_blank" class="text-decoration-none text-reset">
                                @_dto.GitHub
                            </a>
                        </span>
                    </div>
                </div>
            </Content>
        </Card>
    </div>

    <div class="col">
        <Card Title="My story" Padding="p-3" Height="h-100">
            <Content>
                @((MarkupString)_dto.MyStory)
            </Content>
        </Card>
    </div>
</div>

@code {

    [Inject]
    IDataService DataService { get; set; } = default!;

    AboutMeDto _dto = new();

    protected override async Task OnInitializedAsync()
    {
        _dto = await DataService.GetAboutMeAsync();
    }

}