<div class="text-center">
    <img src="@Src" alt="@Alt" class="mb-3" style="width: 4rem; height: 4rem;"/>
    <h5>@Text</h5>
</div>

@code {

    [Parameter]
    public string Src { get; set; } = default!;

    [Parameter]
    public string Alt { get; set; } = default!;

    [Parameter]
    public string Text { get; set; } = default!;

}